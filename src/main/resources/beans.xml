<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person" class="com.tw.spring.custom.Person">
        <property name="name" value="zhang3"/>
        <property name="age" value="18"/>
    </bean>

    <bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
        <property name="customEditors">
            <map>
                <entry key="java.util.Date" value-ref="datePropertyEditor"/>
            </map>
        </property>
    </bean>

    <bean id="datePropertyEditor" class="com.tw.spring.custom.DatePropertyEditor">
        <property name="datePattern" value="yyyy/MM/dd"/>
    </bean>
</beans>